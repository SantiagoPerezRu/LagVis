<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="180dp">

            <ImageView
                android:id="@+id/imgHeader"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/top_background" />

            <TextView
                android:id="@+id/tvResumenTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|start"
                android:layout_margin="16dp"
                android:text=" 🗓️ Calendario laboral "
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:fontFamily="@font/inter"
                android:padding="8dp" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Card de filtros -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Año -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Año:"
                        android:fontFamily="@font/inter" />

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="8dp">

                        <com.google.android.material.textfield.MaterialAutoCompleteTextView
                            android:id="@+id/autoCompleteTextViewAnio"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Introduzca un año"
                            android:inputType="none" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Provincia -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Provincia:"
                        android:fontFamily="@font/inter" />

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="8dp">

                        <AutoCompleteTextView
                            android:id="@+id/autoCompleteTextViewComunidades"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:hint="Selecciona provincia" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <Button
                        android:id="@+id/btnEnviar"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="14dp"
                        android:backgroundTint="#3333cc"
                        android:fontFamily="@font/inter"
                        android:padding="6dp"
                        android:text="Consultar"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        app:cornerRadius="8dp" />

                    <TextView
                        android:id="@+id/tvNoFestivos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:padding="8dp"
                        android:text="Selecciona provincia y año para ver los festivos."
                        android:textColor="#2C3E50"
                        android:textSize="16sp"
                        android:visibility="visible" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Lista por si quieres seguir mostrando items
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewFestivos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:visibility="gone" />-->

            <!-- Card Calendario -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardCalendar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/tvCalendarTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Calendario"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:paddingBottom="8dp" />

                    <!-- Kizitonwose Calendar -->
                    <com.kizitonwose.calendar.view.CalendarView
                        android:id="@+id/calendarView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        app:cv_monthHeaderResource="@layout/calendar_month_header_layout"
                        app:cv_dayViewResource="@layout/calendar_day_layout" />


                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardLegend"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="6dp"
                        app:contentPadding="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvLegendTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Colores de festivos"
                                android:textStyle="bold"
                                android:textSize="16sp"
                                android:textColor="@android:color/black"
                                android:layout_marginBottom="8dp"/>

                            <!-- Fila: Nacional -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginTop="4dp">

                                <View
                                    android:layout_width="14dp"
                                    android:layout_height="14dp"
                                    android:background="@drawable/legend_dot_nacional"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="12dp"
                                    android:text="Nacional"
                                    android:textSize="14sp"
                                    android:textColor="#333"/>
                            </LinearLayout>

                            <!-- Fila: Autonómica -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginTop="4dp">

                                <View
                                    android:layout_width="14dp"
                                    android:layout_height="14dp"
                                    android:background="@drawable/legend_dot_autonomico"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="12dp"
                                    android:text="Autonómica"
                                    android:textSize="14sp"
                                    android:textColor="#333"/>
                            </LinearLayout>

                            <!-- Fila: Municipal -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginTop="4dp">

                                <View
                                    android:layout_width="14dp"
                                    android:layout_height="14dp"
                                    android:background="@drawable/legend_dot_municipal"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="12dp"
                                    android:text="Municipal"
                                    android:textSize="14sp"
                                    android:textColor="#333"/>
                            </LinearLayout>

                            <!-- Fila: Local (provincial) -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginTop="4dp">

                                <View
                                    android:layout_width="14dp"
                                    android:layout_height="14dp"
                                    android:background="@drawable/legend_dot_local"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="12dp"
                                    android:text="Local / Provincial"
                                    android:textSize="14sp"
                                    android:textColor="#333"/>
                            </LinearLayout>

                            <!-- Fila: Info -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginTop="4dp">

                                <View
                                    android:layout_width="14dp"
                                    android:layout_height="14dp"
                                    android:background="@drawable/legend_dot_info"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="12dp"
                                    android:text="Informativo (cambios de hora, etc.)"
                                    android:textSize="14sp"
                                    android:textColor="#333"/>
                            </LinearLayout>

                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardHolidayInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:visibility="gone"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/tvHolidayDate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Lunes, 6 de enero de 2025"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"/>

                        <ImageButton
                            android:id="@+id/btnCloseHolidayCard"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="Cerrar"
                            android:src="@android:drawable/ic_menu_close_clear_cancel"
                            app:tint="#666" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvHolidayProvince"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Madrid"
                        android:textSize="13sp"
                        android:textColor="#666"
                        android:layout_marginTop="2dp"/>

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chipGroupHolidays"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        app:singleLine="false"
                        app:singleSelection="false"
                        app:chipSpacingVertical="8dp"
                        app:chipSpacingHorizontal="8dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>


        </LinearLayout>
    </LinearLayout>
</ScrollView>
