<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Cabecera -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="180dp">

            <ImageView
                android:id="@+id/imgHeader"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/top_background" />

            <TextView
                android:id="@+id/tvResumenTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|start"
                android:layout_margin="16dp"
                android:text="LagVis ⚖️"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:fontFamily="@font/inter"
                android:padding="8dp" />
        </FrameLayout>

        <!-- Contenido -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Título -->
            <TextView
                android:id="@+id/tvTituloRegistroEmpresa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="🏢 Registro de Empresa"
                android:textColor="#2C3E50"
                android:textSize="22sp"
                android:textStyle="bold" />

            <!-- CardView de información -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="🔍 Información"
                        android:textColor="#2C3E50"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvInfoRegistroEmpresa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Para registrar una empresa, dirígete a nuestro portal web y completa el formulario oficial de alta."
                        android:textColor="#555555"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/btnAbrirWeb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Ir al portal web"
                        android:textColor="@android:color/white"
                        android:backgroundTint="#3F51B5"
                        android:textAllCaps="false"
                        android:paddingLeft="24dp"
                        android:paddingRight="24dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- CardView de ventajas -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="💡 ¿Por qué registrar tu empresa?"
                        android:textColor="#2C3E50"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvVentajasEmpresa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="• Control total de los días trabajados, vacaciones y permisos.
                        \n• Ahorro de tiempo en la gestión de RRHH con herramientas digitales.
                        \n• Roles diferenciados: administrador, RRHH y empleados.
                        \n• Mejora de la organización interna gracias a calendarios integrados.
                        \n• Registro claro y transparente de las ausencias de cada trabajador.
                        \n• Facilita el cumplimiento de los convenios laborales vigentes."
                        android:textColor="#555555"
                        android:textSize="14sp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </LinearLayout>
</ScrollView>
