<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top|center"
    android:layout_margin="32dp"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <!-- TextView for heading at the top -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LagVis "
        android:textColor="#02187B"
        android:textSize="70sp"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="60dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recuperar contraseña"
        android:textSize="28sp"
        android:textColor="@color/black"
        android:layout_margin="32dp"
        android:textStyle="bold" />

    <!-- Edit text for email -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/email_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Introduce el correo de tu cuenta."
            android:inputType="textEmailAddress"
            android:textColor="@color/black" />

    </com.google.android.material.textfield.TextInputLayout>




    <!-- Button for register with text "Register" -->
    <Button
        android:id="@+id/btnEnviar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#02187B"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="Enviar correo recuperación" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <TextView
            android:id="@+id/textoYaEnviado1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:visibility="invisible"
            android:text="Por favor revise su correo electrónico" />

        <TextView
            android:id="@+id/textoYaEnviado2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="INICIO"
            style="bold"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:visibility="invisible"
            android:textColor="#FF0000" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="¿No tienes una cuenta?" />

        <TextView
            android:id="@+id/textoRegistro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registrate Aquí"
            style="bold"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:textColor="#02187B" />
    </LinearLayout>
</LinearLayout>
