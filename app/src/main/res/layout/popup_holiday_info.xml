<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <!-- Flechita/indicador -->
    <View
        android:id="@+id/arrowTop"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg_popup_arrow"/>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-4dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="12dp"
        app:strokeWidth="1dp"
        app:strokeColor="#1F000000"
        app:contentPadding="20dp">   <!-- ⬅️ más padding interno -->

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvPopupDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lunes, 6 de enero de 2025"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="6dp"/>  <!-- ⬅️ separación -->

            <TextView
                android:id="@+id/tvPopupProvince"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Madrid"
                android:textSize="12sp"
                android:textColor="#666"
                android:layout_marginBottom="8dp"/>


            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupPopup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:singleLine="false"
                app:singleSelection="false"
                app:chipSpacingHorizontal="10dp"
                app:chipSpacingVertical="10dp"
                />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>


</LinearLayout>
