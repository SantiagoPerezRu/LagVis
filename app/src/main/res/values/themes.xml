<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.LagVis_V1" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/law_blue</item>
        <item name="colorPrimaryVariant">@color/royal_blue</item>
        <item name="colorOnPrimary">#FFFFFF</item> <!-- Texto en blanco para contraste -->
