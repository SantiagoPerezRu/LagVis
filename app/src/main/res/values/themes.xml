    </style>

    <style name="Theme.LagVis_V1" parent="Base.Theme.LagVis_V1" />


    <style name="bottomNavigation">
        <item name="android:background">@color/law_blue</item>
        <item name="android:iconTint">@color/white</item>
        <item name="itemTextColor">@color/black</item>
    </style>


    <style name="Theme.Lagvis_v1" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
